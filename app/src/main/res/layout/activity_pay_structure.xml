<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_pay_str"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    tools:context=".activity.PayStructureActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/statusbar"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/backbutton_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/back_white" />




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backmedcn">


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image11"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/no_image"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>

                    <ImageView
                        android:id="@+id/captureimage_profile11"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/camera"/>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/imageview_logo_profile11"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="right"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_marginTop="-25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/profile_shape">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pay Structure"
                        android:textColor="#970842"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="left"
                        android:drawableLeft="@drawable/personal_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#a9a9a9"
                        android:layout_marginTop="10dp"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#2b2661"
                        android:padding="10dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="Payment(Taxable)"
                            android:textColor="#ffffff"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox_dallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dearness Allowance"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/><!--set Text Size of text in CheckBox-->


                    <CheckBox
                        android:id="@+id/checkbox_hrallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House Rent Allowance"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>


                    <CheckBox
                        android:id="@+id/checkbox_conallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conveyance Allowance"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>


                    <CheckBox
                        android:id="@+id/checkbox_perfallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance Allowance"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>



                    <CheckBox
                        android:id="@+id/checkbox_monlyfixallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Fixed Allowance"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#2b2661"
                        android:padding="10dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="Deduction"
                            android:textColor="#ffffff"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox_pf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provident Fund"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/><!--set Text Size of text in CheckBox-->


                    <CheckBox
                        android:id="@+id/checkbox_i_tax_dedu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I. Tax Deduction"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>


                    <CheckBox
                        android:id="@+id/checkbox_i_tx_ces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I. Tax Cess"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>


                    <CheckBox
                        android:id="@+id/checkbox_esi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESI"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>



                    <CheckBox
                        android:id="@+id/checkbox_profe_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prof Tax"
                        android:textColor="#626060"
                        android:checked="false"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#01AEF0"
                        android:textSize="16sp"/>




                   <!-- <Button
                        android:id="@+id/button_sibmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:padding="10dp"
                        android:text="Submit"
                        android:textSize="19dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:background="@drawable/button_profile_shape"/>-->



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>