<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_addit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    tools:context=".activity.AdditonalDtlsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/statusbar"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/backbutton_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/back_white" />




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backmedcn">


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image6"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/no_image"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>

                    <ImageView
                        android:id="@+id/captureimage_profile6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/camera"/>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/imageview_logo_profile6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="right"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_marginTop="-25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/profile_shape">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional Details"
                        android:textColor="#970842"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="left"
                        android:drawableLeft="@drawable/personal_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#a9a9a9"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Blood Group"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <Spinner
                            android:id="@+id/spinner_employee__blood_grp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/spinner_border"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Weight (in KG)"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Weight (in KG)"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Height (in cm)"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_hight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Height (in cm)"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Identification Mark1"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_identification_mark1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Identification Mark1"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Identification Mark2"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_identification_mark2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Identification Mark2"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Disability"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <Spinner
                            android:id="@+id/spinner_employee__physi_challange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/spinner_border"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Criminal Offense"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <Spinner
                            android:id="@+id/spinner_employee__criminal_offense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/spinner_border"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contact Details"
                        android:textColor="#970842"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="left"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/personal_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"/>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#a9a9a9"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Name"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_name_emg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Name"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Relationship"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <Spinner
                            android:id="@+id/spinner_employee__relason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/spinner_border"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Email"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_email_emg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:hint="Email"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Emergency Contact No."
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_emgcontact_emg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:hint="Emergency Contact No."
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Address"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_adds_emg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:hint="Address"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Certified Membership"
                        android:textColor="#970842"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="left"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/personal_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"/>

                    <View
                        android:id="@+id/line11"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#a9a9a9"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Title of Certified License"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_titleofcerti_license"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Title of Certified License"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="License Number"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/round_shape"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edittext_employee_license_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:hint="License Number"
                            android:gravity="left|center"
                            android:background="@null"
                            android:textSize="16dp"
                            android:textColor="#626060"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Start Date"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/textview_employee_startdate_license"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Start Date"
                        android:background="@drawable/round_shape"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/calander_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:textColor="#626060"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="End Date"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/textview_employee_enddate_license"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="End Date"
                        android:background="@drawable/round_shape"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/calander_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:textColor="#626060"/>








                    <Button
                        android:id="@+id/next6button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:padding="10dp"
                        android:text="NEXT"
                        android:textSize="19dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:background="@drawable/button_profile_shape"/>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>