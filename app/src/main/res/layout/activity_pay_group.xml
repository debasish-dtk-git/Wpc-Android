<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#e9e9e9"
    tools:context=".activity.PayGroupActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/statusbar">

        <ImageView
            android:id="@+id/backbutton_paygrp_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="left|center"
            android:scaleType="fitXY"
            android:src="@drawable/back_white" />




    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <WebView
            android:id="@+id/webview_paygrp_org"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:overScrollMode="never"
            android:layout_weight="1"
            android:layout_gravity="center">

        </WebView>

        <ProgressBar
            android:id="@+id/progressBar_paygrp_org"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:indeterminateTint="#D81B60"
            android:layout_gravity="center"/>

    </FrameLayout>


</LinearLayout>


