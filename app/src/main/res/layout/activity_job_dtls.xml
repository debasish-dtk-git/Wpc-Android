<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    tools:context=".activity.JobDtlsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/statusbar"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/backbutton_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/back_white" />




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backmedcn">


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image3"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/no_image"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>

                    <ImageView
                        android:id="@+id/captureimage_profile3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/camera"/>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/imageview_logo_profile3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="right"/>


            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_marginTop="-30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/profile_shape">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Details"
                        android:textColor="#970842"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="left"
                        android:drawableLeft="@drawable/personal_icon"
                        android:drawableTint="#970842"
                        android:drawablePadding="10dp" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#a9a9a9"/>

                    <LinearLayout
                        android:id="@+id/lin_employee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="top|center"
                        android:layout_marginTop="20dp">

                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">


                        <Button
                            android:id="@+id/button_add_jobs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/add_button_shape"
                            android:text="+"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="15dp"
                            android:layout_marginRight="20dp"
                            android:onClick="onAddFieldJobs"
                            android:textColor="@android:color/white"/>

                        <!-- <Button
                             android:id="@+id/button_remove_train"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@drawable/remove_button_shape"
                             android:text="-"
                             android:padding="15dp"
                             android:textStyle="bold"
                             android:textSize="20dp"
                             android:textColor="@android:color/white" />-->
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/container_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                    </LinearLayout>





                    <Button
                        android:id="@+id/next3button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:padding="10dp"
                        android:text="NEXT"
                        android:textSize="19dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:background="@drawable/button_profile_shape"/>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>